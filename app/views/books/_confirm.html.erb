<%= form_with(model: book, local: true) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= book.title %>
    <%= form.hidden_field :title %>
  </div>

  <div class="field">
    <%= form.label :author %>
    <%= book.author %>
    <%= form.hidden_field :author %>
  </div>

  <div class="actions">
    <%= form.submit 'Back', name: 'back' %>
    <%= form.submit %>
  </div>
<% end %>
